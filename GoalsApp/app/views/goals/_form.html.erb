<% action = @goal.persisted? ? goals_url(@goal) : goals_url %>
<% method = @goal.persisted? ? "PATCH" : "POST" %>
<% button = @goal.persisted? ? "Submit" : "Submit Goal" %>

<form 
  action="<%= action %>"
  method="POST">
  
  <input
    type="hidden"
    name="_method"
    value="<%= method %>">
  
  <input
    type="hidden"
    name="authenticity_token"
    value="form_authenticity_token">
    
  <label>
    Title
    <input type="text" name="goal[title]">
  </label>
  
  <label>
    Description
    <textarea name="goal[description]"></textarea>
  </label>
  
  <label for="privacy_private">Private</label>
  <input type="radio" name="goal[privacy]" id="privacy_private" value="private">
  <br>
  <label for="privacy_public">Public</label>
  <input type="radio" name="goal[privacy]" id="privacy_public" value="public">
  <br><br>
  <label for="status_complete">Complete</label>
  <input type="radio" name="goal[status]" id="status_complete" value="complete">
  <br>
  <label for="status_incomplete">Incomplete</label>
  <input type="radio" name="goal[status]" id="status_incomplete" value="incomplete">
  
  <input type="submit" value="<%= button %>">
</form>